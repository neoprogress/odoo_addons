<odoo>
    <data>

        <!-- List View -->
        <record id="view_account_list" model="ir.ui.view">
            <field name="name">account.list</field>
            <field name="model">module.account</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="account_type"/>
                    <field name="bank_details"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_account_search" model="ir.ui.view">
            <field name="name">account.search</field>
            <field name="model">module.account</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="account_type"/>
                </search>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_account_form" model="ir.ui.view">
            <field name="name">account.form</field>
            <field name="model">module.account</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="account_type"/>
                            <field name="bank_details"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Dashboard View -->
        <record id="view_account_dashboard" model="ir.ui.view">
            <field name="name">account.dashboard</field>
            <field name="model">module.account</field>
            <field name="arch" type="xml">
                <dashboard>
                    <div class="oe_dashboard">
                        <div class="oe_dashboard_section">
                            <field name="name" widget="text" string="Name"/>
                            <field name="account_type" widget="text" string="Account Type"/>
                            <field name="bank_details" widget="text" string="Bank Details"/>
                        </div>
                    </div>
                </dashboard>
            </field>
        </record>

        <!-- Action -->
        <record id="action_account" model="ir.actions.act_window">
            <field name="name">Accounts</field>
            <field name="res_model">module.account</field>
            <field name="view_mode">tree,form,dashboard</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_account" name="Accounts" parent="base.menu_finance" sequence="30"/>
        <menuitem id="menu_account_list" name="Account List" parent="menu_account" action="action_account" sequence="10"/>
        
    </data>
</odoo>
